	helper = osxkeychain
[http]
	postBuffer = 524288000
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[commit]
	gpgsign = true
[push]
	default = simple
[user]
	useConfigOnly = true
[diff]
	indentHeuristic = on

